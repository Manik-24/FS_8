const ModPage = () => <h2 style={{ textAlign: 'center', marginTop: '80px' }}>Moderator Page ğŸ”§</h2>
const UserPage = () => <h2 style={{ textAlign: 'center', marginTop: '80px' }}>User Page ğŸ™‹â€â™‚ï¸</h2>
const Unauthorized = () => <h2 style={{ textAlign: 'center', marginTop: '80px', color: 'red' }}>Access Denied ğŸš«</h2>

export default function App() {
  return (
    <Router>
      <Routes>
        <Route path="/login" element={<Login />} />
        <Route path="/dashboard" element={<ProtectedRoute allowedRoles={['Admin','User','Moderator']}><Dashboard /></ProtectedRoute>} />
        <Route path="/admin" element={<ProtectedRoute allowedRoles={['Admin']}><AdminPage /></ProtectedRoute>} />
        <Route path="/mod" element={<ProtectedRoute allowedRoles={['Moderator','Admin']}><ModPage /></ProtectedRoute>} />
        <Route path="/user" element={<ProtectedRoute allowedRoles={['User','Admin','Moderator']}><UserPage /></ProtectedRoute>} />
        <Route path="/unauthorized" element={<Unauthorized />} />
        <Route path="*" element={<Navigate to="/login" />} />
      </Routes>
    </Router>
  )
}
